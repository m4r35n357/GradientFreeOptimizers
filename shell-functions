
# generate string of random floats from integer range
# Example:  typeset -f random
# Example:  random 10 -5 5
# Example:  ./nm-rastrigin-gl 6 0 1.0e-9 10000 5.0 0 $(random 3 -5 5)
#
random() {
length=$1
lower=$(($2 + 1))
upper=$3
string=""
count=1
while [ $count -le $length ]
do
    string="$string $((lower + RANDOM%(upper - lower))).$((RANDOM%999))"
    count=$((count + 1))
done
echo $string
}
